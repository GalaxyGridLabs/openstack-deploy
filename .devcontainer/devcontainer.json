// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "GGL Openstack deployment",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],

	"features": {
		"ghcr.io/dhoeric/features/google-cloud-cli:1": {
			"installGkeGcloudAuthPlugin": true
		},
		"ghcr.io/devcontainers-extra/features/pulumi:1": {
			"bashCompletion": true,
			"version": "3.137.0"
		},
		"ghcr.io/devcontainers-extra/features/pylint:2": {
			"version": "latest"
		}
	},

	"customizations": {
		"vscode": {
			"settings": {
				// Formatting
				"editor.formatOnSave": true,
				"files.trimTrailingWhitespace": true,
				"files.insertFinalNewline": true,
				"files.trimFinalNewlines": true,
				// Python formatting
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter",
					"editor.formatOnSave": true
				},
				// Misc
				"git.autofetch": true
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"DavidAnson.vscode-markdownlint",
				"ms-python.python",
				"pulumi.pulumi-vscode-tools",
				"pulumi.pulumi-lsp-client",
				"ms-python.black-formatter"
			]
		}
	},

	"containerUser": "vscode",
	"remoteUser": "vscode",
	"workspaceMount": "source=openstack-deploy,target=/workspaces/openstack-deploy,type=volume",
	"workspaceFolder": "/workspaces/openstack-deploy",
	"postCreateCommand": {
		"fixVolumePerms": "sudo chown -R $(whoami): /workspaces/ && sudo chown -R $(whoami): /commandhistory/ && cd /workspaces && git clone https://github.com/GalaxyGridLabs/openstack-deploy.git && cd openstack-deploy && python3 -m venv venv && source venv/bin/activate && pip3 install -r ./requirements.txt"
	},	
	"mounts": [
		"source=openstack-deploy-bashhistory-${devcontainerId},target=/commandhistory,type=volume"
	]
}
